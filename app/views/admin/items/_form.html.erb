<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_with(model: [:admin, @item], local: true) do |f| %>
        <% if @item.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

            <ul>
            <% @item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, autocomplete: "title", class: "form-control", placeholder:"Titre", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :description, "Description" %><br />
          <%= f.text_area :description, autofocus: true, autocomplete: "description", class: "form-control", placeholder:"Description", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :price %>
          <%= f.number_field :price, class: "form-control", placeholder:"Prix (â‚¬)", required: true %>
        </div>

        <div class="form-group">
          <%= f.file_field :cat_picture, autocomplete: :cat_picture %><br />
        </div>
        
        <div class="actions mt-5">
          <%= f.submit "Mettre en vente", class: "btn btn-lg btn-primary btn-block" %>
        </div>
        <br>
        <%= link_to 'Annuler', items_path %>
      <% end %>
    </div>
  </div>
</div>


